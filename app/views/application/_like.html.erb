<div id="like-button">
  <% if logged_in? %>
    <% if advice.like_user(current_user.id) %>
      <%= button_to like_path(advice.like_user(current_user.id)), method: :delete, remote: true do %>
        <span>Like</span>
        <span>
          <%= advice.likes_count %>
        </span>
      <% end %>
    <% else %>
      <%= button_to advice_likes_path(advice), id: "like-button", remote: true do %>
        <span>Like</span>
        <span>
          <%= advice.likes_count %>
        </span>
      <% end %>
    <% end %>
  <% else %>
    <span>Like</span>
    <span>
      <%= advice.likes_count %>
    </span>
  <% end %>
</div>