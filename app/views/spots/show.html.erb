<% provide(:title, @spot.placeName) %>

<header>
  <h1><%= @spot.placeName %></h1>
</header>

<session class="spot_detail">
  <%= image_tag @spot.picture, :class => 'header_img' %>
  <div class="content">
    <div class="button_and_head">
      <h2>詳細情報</h2>
      <%= link_to "地図で開く", create_url(@spot.lat,@spot.lng), :target=>["_blank"], :class => 'button' %>
    </div>
    <p><%= @spot.detailComment %></p>
    <div class="button_and_head">
      <h2>ワンポイントアドバイス</h2>
      <%= link_to "新規作成", new_spot_advice_url(spot_id: @spot.id), :class => 'button' %>
      </div>
    <ul>
      <% @advices.each do |advice| %>
        <li class="advice_item">
          <%= link_to advice do %>
            <p><%= advice.comment %></p>
              <%= image_tag advice.picture.url if advice.picture? %>
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</session>
