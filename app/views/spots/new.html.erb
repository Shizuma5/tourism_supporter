<% provide(:title, 'create Spot') %>
<h1>create Spot</h1>

<%= form_for(@spot) do |f| %>
    <%= f.label :placeName %>
    <%= f.text_field :placeName %>

    <%= f.label :lat %>
    <%= f.number_field :lat, step:0.00000001 %>

    <%= f.label :lng %>
    <%= f.number_field :lng, step:0.00000001 %>

    <%= f.submit "Create new spot" %>

    <%= f.file_field :picture , accept: 'image/jpeg, image/gif, image/png'%>
<% end %>
