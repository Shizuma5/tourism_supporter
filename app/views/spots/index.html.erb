<% provide :header_title, 'いいねサポーター' %>

<%= form_tag(spots_path, method: "get") do %>
  <div class="search_box" ><%= text_field_tag :search,  params[:search], :placeholder => 'キーワード検索' %></div>
<% end %>

<% if @spots.blank? %>
  <session class="search_result">
    <div class="content">
      <p> 条件に一致する検索結果はありません。 </p>
    </div>
  </session>
<% end %>
<ul class="spots">
  <% @spots.each do |spot| %>
    <%= render 'layouts/spot', spot: spot %>
  <% end %>
</ul>

<%= link_to "＋", new_spot_url, :class => 'new_spot_button' %>
