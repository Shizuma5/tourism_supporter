<% provide(:title, 'advice') %>
<% provide :header_title, 'アドバイス作成' %>

<session class="new_advice">
  <div class="row main">
    <%= form_for([@spot, @advice]) do |f| %>
      <div class="input-field col s12">
        <%= f.label :comment, "コメント", class: "active" %>
        <%= f.text_area :comment, class: "materialize-textarea" %>
      </div>
      <div class="file-field input-field col s12">
        <div class="btn">
          <span>画像</span>
          <%= f.file_field :picture, accept: 'image/jpeg' %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <div class="submit_button col s12">
        <%= button_tag "送信", type: "submit", class: "waves-effect waves-light btn" %>
      </div>
    <% end %>
  </div>
</session>
